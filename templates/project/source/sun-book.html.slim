// 孫學專書數位系統

.header
	/! 2014-10-16
	.logo.logo-complate
		img src="img/logo/logo--sun-book.png" alt="國立國父紀念館 中山學術資料庫 孫學專書數位系統"
	.top-nav
		ul
			li
				| 回首頁（
				a<> href="javascript:;" 中山學術資料庫
				| / 
				a<> href="javascript:;" 國立國父紀念館
				| )
			li: a href="javascript:;" 網路書城
.main
	.row
		.side--left.banner-complate
			img src="img/banner--sun-book.png"
		.area
			.search-utility.search-sun-book
				.search-tab
					ul
						li: a href="javascript:;" 簡易檢索
						li: a href="javascript:;" 進階檢索
				form.tab-content
					ul
						/ 簡易檢索
						li.tabs-item.search-utility--seach
							ul.search-row
								li
									input type="text"
								li
									a.search-utility__btn--search href="javascript:;" 搜尋
							.clearfix
							ul.search-row
								- (1..4).each do |n|
									li
										input type="checkbox" name="checkbox-#{n}" id="checkbox-#{n}"
										label for="checkbox-#{n}"Check #{n}
							.clearfix
							lebel
								| 出版日期 
								ul.search-row
									li
										select
											option 請選擇
										|  ~ 
										select
											option 請選擇
							.clearfix
							lebel
								| 出版語文
								ul.search-row
									li
										select
											option 請選擇
							.clearfix
							lebel
								| 出版地點
								ul.search-row
									li
										select
											option 請選擇

						/ 進階檢索
						li.tabs-item.search-utility--adv-seach
							p =zh_lorem_paragraph
	.row
		.block-2030
			h2.title-cn-style--g style='margin-top: 0px;'
				span 最新出版專書
			.clearfix
			table.sun-book-table border="0" width="100%" 
				thead
					tr
						th scope="col"  &nbsp;
						th scope="col"  書名
						th scope="col"  作者
						th scope="col"  出版社
						th scope="col"  出版日期
				tbody
					- (1..10).each do |n|
						tr
							td
								.text-center #{n}
							td
								a href="javascript:;" =zh_lorem_words 20 
							td =zh_lorem_name
							td =zh_lorem_name
							td =lorem_date("%Y/%m/%d")

=render "partials/layout-foot-b"